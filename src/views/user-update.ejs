<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="user-info-container">
                <form method="POST" action="/update-user">

                    <div class="mt-3">
                        <h3>Update a new user:</h3>
                    </div>
                    <input hidden value="<%= userData.id %>" name="id" />
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" value="<%= userData.email %>" name="email" class="form-control" id="email"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" value="<%= userData.username %>" name="username" class="form-control"
                            id="username">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Update</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>